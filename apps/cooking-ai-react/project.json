{
  "name": "cooking-ai-react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cooking-ai-react/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/cooking-ai-react",
        "configFile": "apps/cooking-ai-react/vite.config.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "sourcemap": false,
          "minify": true
        }
      },
      "dependsOn": [
        {
          "target": "build:tailwind",
          "projects": "self",
          "params": "forward"
        }
      ]
    },
    "build:tailwind": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tailwindcss -i ./src/tailwind-input.css -o ./assets/styles.css"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "commands": [
          {
            "command": "vite serve --config apps/cooking-ai-react/vite.config.ts --port 4201 --host localhost --mode development"
          }
        ],
        "parallel": false
      },
      "configurations": {
        "development": {},
        "production": {
          "commands": [
            {
              "command": "vite serve --config apps/cooking-ai-react/vite.config.ts --port 4201 --host localhost --mode production"
            }
          ]
        }
      }
    },
    "build:tailwind:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tailwindcss -i ./src/tailwind-input.css -o ./assets/styles.css --watch --poll"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/cooking-ai-react/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "configFile": "apps/cooking-ai-react/vite.config.ts"
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "cooking-ai-react:build:development"
      },
      "configurations": {
        "development": {
          "buildTarget": "cooking-ai-react:build:development"
        },
        "production": {
          "buildTarget": "cooking-ai-react:build:production"
        }
      }
    }
  }
}