{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run prepare-deploy",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run prepare-deploy",
        "outputDirectory": "."
      }
    },
    { "src": "api/**", "use": "@vercel/static" },
    { "src": "form/**", "use": "@vercel/static" },
    { "src": "recipes/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "http://localhost:3001/api/$1" },
    { "src": "/form/(.*)", "dest": "/form/$1" },
    { "src": "/recipes/(.*)", "dest": "/recipes/$1" },
    { "src": "/(.*)", "dest": "/form/index.html" }
  ]
}