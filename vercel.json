{
  "version": 2,
  "builds": [
    { "src": "api/main.js", "use": "@vercel/node" },
    { "src": "form/**", "use": "@vercel/static" },
    { "src": "recipes/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/main.js" },
    { "src": "/form/(.*)", "dest": "/form/$1" },
    { "src": "/recipes/(.*)", "dest": "/recipes/$1" },
    { "src": "/(.*)", "dest": "/form/index.html" }
  ]
}