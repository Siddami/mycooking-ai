{
  "version": 2,
  "builds": [
    {
      "src": "apps/cooking-ai-api/dist/main.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["apps/cooking-ai-api/dist/**"] }
    },
    {
      "src": "form/**",
      "use": "@vercel/static"
    },
    {
      "src": "recipes/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/cooking-ai-api/dist/main.js"
    },
    {
      "src": "/form/(.*)",
      "dest": "/form/$1"
    },
    {
      "src": "/recipes/(.*)",
      "dest": "/recipes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/form/index-angular.html"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key"
  }
}
